<h2><%= t('views.common.title_show', name: t('activerecord.models.user')) %></h2>

<p>
  <strong><%= t('activerecord.attributes.user.email') %>:</strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= t('activerecord.attributes.user.postal_code') %>:</strong>
  <%= @user.postal_code %>
</p>

<p>
  <strong><%= t('activerecord.attributes.user.address') %>:</strong>
  <%= @user.address %>
</p>

<p>
  <strong><%= t('activerecord.attributes.user.bio') %>:</strong>
  <%= @user.bio %>
</p>

<% if @user == current_user %>
  <p><%= link_to t('views.common.edit', name: t('activerecord.models.user')), edit_user_registration_path %></p>
<% end %>
