<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="<%= params[:action] %>">
    <% if user_signed_in? %>
        <%= link_to "本一覧", books_path %>
        <%= link_to "ユーザ一覧", users_path %>
        <%= link_to "#{current_user.email}さんのプロフィール", user_profile_path(current_user) %>
        <%= link_to "ログアウト", destroy_user_session_path,data: { turbo_method: :delete } %>
    <% end %>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
    <%= debug(current_user) if Rails.env.development? %>
  </body>
</html>
